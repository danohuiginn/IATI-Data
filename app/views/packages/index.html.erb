<h1>Listing Packages</h1>
<p><%= link_to 'Refresh from IATI Registry', :controller => :iatiregistry %></p>
<table>
  <tr>
<!--    <th>Packageid</th>-->
    <th>Name</th>
    <th>Title</th>
<!--    <th>Iati preview</th>-->
    <th>Activity period</th>
    <th>Activity count</th>
    <th>Country</th>
    <th>Donors country</th>
    <th>Format</th>
<!--    <th>Ckan url</th>
    <th>Download Url</th>-->
    <th>Retrieve</th>
  </tr>

<% @packages.each do |package| %>
  <tr>
<!--    <td><%=h package.packageid %></td>-->
    <td><%=h package.name %></td>
    <td><%=h package.title %></td>
    <td><%=h package.activity_period_from %> - <%=h package.activity_period_to %></td>
<!--    <td><%=h package.iati_preview %></td>-->
    <td><%=h package.activity_count %></td>
    <td><%=h package.country %></td>
    <td><%=h package.donors_country %></td>
    <td><%=h package.resources_format %></td>
<!--    <td><%=h package.resources_url %></td>
    <td><%=h package.ckan_url %></td>-->
<% if package.retrieved == 1 %>
    <td>Retrieved <%=h time_ago_in_words(package.retrieved_date) %> ago</td>
<% else %>
    <td><%= link_to 'Get Package', :controller=> :iatiregistry, :action=> :getPackage, :id=> package.id %></td>
<% end %>
<!--    <td><%= link_to 'Show', package %></td>
    <td><%= link_to 'Edit', edit_package_path(package) %></td>
    <td><%= link_to 'Destroy', package, :confirm => 'Are you sure?', :method => :delete %></td> -->
  </tr>
<% end %>
</table>

