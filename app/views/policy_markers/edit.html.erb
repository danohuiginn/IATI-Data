<h1>Editing policy_marker</h1>

<% form_for(@policy_marker) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :text %><br />
    <%= f.text_field :text %>
  </p>
  <p>
    <%= f.label :vocab %><br />
    <%= f.text_field :vocab %>
  </p>
  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @policy_marker %> |
<%= link_to 'Back', policy_markers_path %>