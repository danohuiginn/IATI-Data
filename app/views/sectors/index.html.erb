<h1>Sectors</h1>

<table>
  <tr>
    <th>Sector</th>
    <th>Vocab</th>
    <th>Code</th>
    <th>Show Activities</th>
  </tr>

<% @sectors.each do |sector| %>
  <tr>
    <td><%=h sector.text %></td>
    <td><%=h sector.vocab %></td>
    <td><%=h sector.code %></td>
    <td><%=h link_to pluralize(sector.activities.count, "Activity"), :controller=> :activities, :sector => sector.id %></td>

    <td><%= link_to 'Show', sector %></td>
<!--    <td><%= link_to 'Edit', edit_sector_path(sector) %></td>
    <td><%= link_to 'Destroy', sector, :confirm => 'Are you sure?', :method => :delete %></td>-->
  </tr>
<% end %>
</table>

